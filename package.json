{
  "name": "md-to-img-clipboard",
  "version": "1.0.0",
  "description": "Headless Electron app that converts clipboard Markdown to images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "markdown",
    "clipboard",
    "image"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "marked": "^11.1.1"
  },
  "build": {
    "appId": "com.md2img.app",
    "productName": "Md2Img",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build_icon.png",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "build_icon.png",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "build_icon.png",
      "target": ["AppImage", "deb"]
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer-template.html",
      "icon.png",
      "build_icon.png",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
